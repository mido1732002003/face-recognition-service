# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/facedb
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# Face Recognition
FACE_MODEL=buffalo_l
DETECTOR_BACKEND=scrfd
DEVICE=cpu
EMBEDDING_SIZE=512
SIMILARITY_THRESHOLD=0.65
TOP_K_RESULTS=5

# Index Configuration
INDEX_TYPE=flat
INDEX_PATH=/app/data/faiss_index
IVF_NLIST=100
PQ_M=64
PQ_NBITS=8

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RBAC_ENABLED=false

# Storage
IMAGE_STORAGE_PATH=/app/data/images
ENABLE_IMAGE_STORAGE=false

# Monitoring
METRICS_ENABLED=true
TRACE_ENABLED=false

# Anti-spoofing
LIVENESS_CHECK_ENABLED=false
LIVENESS_CONFIDENCE_THRESHOLD=0.7